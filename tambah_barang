#include <stdio.h>
#include <string.h>

typedef struct {
    char nama[50];
    int stok;
} barang;

barang brg[100];
int jumlah_barang = 0;

void tambah_barang(){
	printf("Masukkan nama barang: ");
	scanf("%s", &brg[jumlah_barang].nama);
  	printf("Jumlah: ");
    	scanf("%d", &brg[jumlah_barang].stok);
    	jumlah_barang++;
	printf("Barang berhasil ditambahkan!\n");    
    }
